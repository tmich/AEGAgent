<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.aeg2000srl.aegagent" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".mvp.CustomersActivity"
            android:label="@string/title_activity_customers" >
        </activity>
        <activity
            android:name=".mvp.CustomerDetailsActivity"
            android:label="@string/title_activity_customer_details" >
        </activity>
        <activity
            android:name=".mvp.UpdateDataActivity"
            android:label="@string/title_activity_update_data" >
        </activity>
        <activity
            android:name=".mvp.HomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".mvp.OrderDetailsActivity"
            android:label="@string/title_activity_order_details" >
        </activity>
    </application>

</manifest>
